<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".More">

    <!-- Lišta "Více" -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Vaše stávající Toolbar komponenta zůstává zde -->

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RelativeLayout for the top bar -->
    <RelativeLayout
        android:id="@+id/darkBlueBar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/colorSecondary">

        <!-- Vaše stávající obsah lišty s jmenem a emailem zůstává zde -->

    </RelativeLayout>

    <!-- ScrollView pro nová data -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/darkBlueBar">

        <!-- LinearLayout pro nová data -->
        <LinearLayout
            android:id="@+id/dataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="16dp">

            <!-- ListView pro nová data -->
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:scrollbars="vertical"
                android:layout_gravity="center" />

            <!-- Přidejte sem jakékoliv další UI komponenty, které potřebujete pro nová data -->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>