<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Finance">


    <RelativeLayout
        android:id="@+id/buttonHistorie"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:onClick="openHistorieFragment"
        android:background="?android:attr/selectableItemBackground"> <!-- Přidáno zvýraznění kliknutí -->

        <ImageView
            android:id="@+id/iconHistorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_menu_24"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconHistorie"
            android:text="Otevrena historie"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>


</RelativeLayout>
