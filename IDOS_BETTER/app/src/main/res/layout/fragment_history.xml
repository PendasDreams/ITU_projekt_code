<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Finance">

    <!-- Lišta Historie -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <!-- Název lišty "Historie" v bílém textu -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historie"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="start" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Vstupní pole pro čas od -->
    <EditText
        android:id="@+id/editTextCasOd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:hint="Čas od"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <!-- Vstupní pole pro čas do -->
    <EditText
        android:id="@+id/editTextCasDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCasOd"
        android:layout_marginTop="16dp"
        android:hint="Čas do"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <!-- Vstupní pole pro místo od -->
    <EditText
        android:id="@+id/editTextMistoOd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCasDo"
        android:layout_marginTop="16dp"
        android:hint="Místo od"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <!-- Vstupní pole pro místo do -->
    <EditText
        android:id="@+id/editTextMistoDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMistoOd"
        android:layout_marginTop="16dp"
        android:hint="Místo do"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <!-- Vstupní pole pro cenu v Kč -->
    <EditText
        android:id="@+id/editTextCena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMistoDo"
        android:layout_marginTop="16dp"
        android:hint="Cena v Kč"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <!-- Tlačítko pro přidání -->
    <Button
        android:id="@+id/buttonPridat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Přidat"
        android:textColor="#000000"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPridat"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_view_background"
        android:padding="16dp"
        android:textColor="#ffffff"
        android:textSize="18sp">

    <!-- Levá část TextView (casOd, casDo, mistoDo) -->
    <TextView
        android:id="@+id/textViewResultLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:text="" />

    <!-- Pravá část TextView (cena) -->
    <TextView
        android:id="@+id/textViewResultRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:text="" />

</RelativeLayout>

</RelativeLayout>
