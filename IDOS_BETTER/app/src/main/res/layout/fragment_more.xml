<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".More">

    <!-- Lišta "Více" -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <!-- Název lišty "Více" v bílém textu -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="start" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/darkBlueBar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/colorSecondary">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_cestujici" />

        <!-- Name -->

        <!-- Email -->

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/imageProfile"
            android:text="Denis Novosád"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textName"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageProfile"
            android:text="xnovos14@vutbr.cz"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- Tlačítka pro SMS jízdenku, Cestující, Nastavení, Nápověda, Podpora a Kontakty -->
    <RelativeLayout
        android:id="@+id/buttonSMSJizdenka"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconSMSJizdenka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_mail_white"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconSMSJizdenka"
            android:text="SMS Jízdenka"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonCestujici"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconCestujici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_cestujici"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconCestujici"
            android:text="Cestující"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonNastaveni"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconNastaveni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_settings_white"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconNastaveni"
            android:text="Nastavení"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonNapoveda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconNapoveda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_question_mark_24"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconNapoveda"
            android:text="Nápověda"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonPodporaKontakty"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconPodporaKontakty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_phone_24"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconPodporaKontakty"
            android:text="Podpora a kontakty"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonInformace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iconInformace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_info_24"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iconInformace"
            android:text="Informace"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp" />
    </RelativeLayout>



</LinearLayout>
