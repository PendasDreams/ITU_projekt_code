<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000"
    tools:context=".More">

    <!-- Linear layout to hold all the content vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        tools:context=".More">

        <!-- Lišta "Více" -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary">

                <!-- Název lišty "Více" v bílém textu -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jízdenky"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_gravity="start" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- RelativeLayout for the top bar -->
        <RelativeLayout
            android:id="@+id/darkBlueBar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@color/colorSecondary">

            <!-- Image -->
            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/baseline_cestujici" />

            <!-- Name -->
            <!-- Email -->
            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/imageProfile"
                android:text="Denis Novosád"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textName"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imageProfile"
                android:text="xnovos14@vutbr.cz"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Add the rectangular area for displaying data below the top bar -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/darkBlueBar">

            <!-- LinearLayout pro nová data -->
            <LinearLayout
                android:id="@+id/dataLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000000"
                android:textColor="#ffffff"
                android:layout_margin="16dp">


                <!-- ListView pro nová data -->
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="vertical"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />

                <!-- Přidejte sem jakékoliv další UI komponenty, které potřebujete pro nová data -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
